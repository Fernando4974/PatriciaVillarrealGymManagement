<Window x:Class="PatriciaVillarrealGymManagement.SplashScreen"
        WindowStartupLocation="CenterScreen"
          WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatriciaVillarrealGymManagement"
        mc:Ignorable="d"
        Title="PVGymManagement" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="794*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="Black" CornerRadius="10" RenderTransformOrigin="1,1" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/logo.jpg" Width="150" Height="150"/>
                <TextBlock Text="Cargando aplicación..." 
                           Margin="0,20,0,0" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#333" />
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="10" 
                             Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
